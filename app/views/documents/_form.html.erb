<% if action_name == "new" %>
  <%= simple_form_for @document, url: meico_product_documents_path, html: { class: 'form-horizontal' }, multipart: true do |f| %>
    <%= f.input :name %>
    <%= f.input :version %>
    <%= f.input :category, as: :select, collection: Document.categories.map {|key, value| [key.humanize, key] } %>
    <%= f.input :date_issued %>
    <%= f.input :file, as: :file %>
    <%= f.submit %>  
  <% end %>
<% elsif action_name == "edit" %>
  <%= simple_form_for @document, url: meico_product_document_path(@document.meico_product.id, @document.id), html: { class: 'form-horizontal' }, multipart: true do |f| %>
    <%= f.input :name %>
    <%= f.input :version %>
    <%= f.input :category, as: :select, collection: Document.categories.map {|key, value| [key.humanize, key] } %>
    <%= f.input :date_issued %>
    <%= f.input :file, as: :file %>
    <%= f.submit %>  
  <% end %>
<% end %>
