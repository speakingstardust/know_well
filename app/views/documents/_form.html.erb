<%= simple_form_for @document, html: { class: 'form-horizontal' }, multipart: true do |f| %>
  <%= f.input :name %>
  <%= f.input :version %>
  <%= f.input :category, as: :select, collection: Document.categories.map {|key, value| [key.humanize, key] } %>
  <%= f.input :date_issued %>
  <%= f.input :file, as: :file %>
  <%= f.submit %>  
<% end %>
