<% provide(:title, "Products List") %>
<div class="row">
  <div class="page-header">
    <h1 class="text-center">Product List</h1>
  </div>
</div>
<div class="row">
  <%= search_form_for @q do |f| %>
    <%= f.label :name_cont, "Product Name", class: 'control-label' %>
    <%= f.text_field :name_cont, class: 'form-control' %>

    <%= f.label :part_number_cont, "Part Number", class: 'control-label' %>
    <%= f.text_field :part_number_cont, class: 'form-control' %>

    <%= f.label :vendor_id_eq, "Vendor", class: 'control-label' %>
    <%= f.collection_select :vendor_id_eq, @vendors, :id, :name, include_blank: true, class: 'form-control' %>

    <%= f.label :manufacturer_id_eq, "Manufacturer", class: 'control-label' %>
    <%= f.collection_select :manufacturer_id_eq, @manufacturers, :id, :name, include_blank: true, class: 'form-control' %>

    <%= f.label :description_cont, "Description", class: 'control-label' %>
    <%= f.text_field :description_cont, class: 'form-control' %>
  <% end %>
</div>
<div class="row">
  <%= render 'table' %>
</div>
