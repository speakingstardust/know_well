<%= form_for @jig_order, html: { class: "form-horizontal" } do |f| %>
	<% if @jig_order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@jig_order.errors.count, "error") %> prohibited this jig order from being saved:</h2>

      <ul>
      <% @jig_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-12 col-sm-10">
    <%= f.text_field :date, "data-provide" => "datepicker", "data-date-format" => "yyyy-mm-dd", "value" => Date.today, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">  
    <%= f.label :customer_id, "Customer", class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-12 col-sm-10">
      <%= f.collection_select :customer_id, @customers, :id, :name, { include_blank: 'Select Customer' }, class: 'form-control customer_select' %>
    </div>
  </div>
  <div class="">
    <%= f.fields_for :jig_order_line_items do |builder| %>
      <%= render 'jig_order_line_item_fields', :f => builder %>
    <% end %> 
    <div class="add-link">
      <%= link_to_add_fields "Add Jig", f, :jig_order_line_items %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :notes, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-12 col-sm-10">
      <%= text_area :notes, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>