<% provide(:title, "Jig Order Index") %>
<div class="row">
	<div class="page-header">
	  <h1 class="text-center">Jig Order Index</h1>
	</div>
</div>

<%= search_form_for @search do |f| %>

	<%= f.label :customer_id_eq, "Customer", class: 'control-label' %>
	<%= f.collection_select :customer_id_eq, @customers, :id, :name, include_blank: true,  class: 'form-control' %>

	<%= f.label :date_gteq, "Order Date", class: 'control-label' %>
	
	<div class="input-group input-daterange">
		<%= f.text_field :date_gteq, "data-provide" => "datepicker", "data-date-format" => "yyyy-mm-dd", class: "form-control" %>
		<span class="input-group-addon">to</span>
		<%= f.text_field :date_lteq, "data-provide" => "datepicker", "data-date-format" => "yyyy-mm-dd", class: "form-control" %>
	</div>

		<%= f.submit "Search", class: "btn btn-primary" %>	
		<%= link_to "Clear Search", request.path, class: "cancel-button" %>
<% end %>

<div class="row">
	<%= render 'table' %>
</div>

<div class="row">
	<div class="col-xs-6">
		<div class="input-group delivery-charge pull-left">
			<%= label_tag :delivery_charge, "Delivery Charge" %>
			<input id="delivery_charge" name="report[delivery_charge]" type="number" value="0">
			<span class="input-group-btn">
				<%= link_to "Generate Jig Summary Report", jig_orders_path(params.merge(:format => 'pdf')), class: "btn btn-primary" %>
			</span>
		</div>
	</div>
</div>