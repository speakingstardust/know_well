<%= paginate @reports %>
<table class="table">
  <thead>
    <tr>
      <th>Date Created</th>
      <th>Report ID</th>
      <th>Customer</th>
      <th>Date From</th>
      <th>Date To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= l(report.created_at, format: :short) %></td>
        <td><%= report.id %></td>
        <td><%= report.customer.name %></td>
        <td><%= l(report.date_from) %></td>
        <td><%= l(report.date_to) %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
