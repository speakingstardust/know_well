<div class="page-header">
  <h1 class="text-center">Jig Summary Report Listing</h1>
</div>

  <%= link_to "Create New Jig Summary Report", new_report_path, class: "btn btn-primary pull-right" %>

<table class="table">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Delivery Charge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.customer.name %></td>
        <td><%= report.start_date %></td>
        <td><%= report.end_date %></td>
        <td><%= report.delivery_charge %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
