<% @tasks.each do |task| %>
  <tr>
    <td></td>
    <td><%= task.order %></td>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= l task.start_date %></td>
    <td><%= task.duration %></td>
    <td><%= l task.end_date %></td>
    <td><%= task.percent_complete %></td>
    <% if task.completed? == false %>
      <td>
        <%= link_to project_task_complete_path(task.project.id, task.id), method: :put do %>
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-unchecked"></span>
          </button>
        <% end %>
      </td>
    <% elsif task.completed? == true %>
      <td>
        <%= link_to project_task_uncomplete_path(task.project.id, task.id), method: :put do %>
            <button type="button" class="btn btn-default btn-lg">
              <span class="glyphicon glyphicon-check"></span>
            </button>
        <% end %>
      </td>
    <% end %>
    <td><%= link_to "Edit", edit_project_task_path(task.project.id, task.id), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to "Delete", project_task_delete_path(task.project.id, task.id), remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>
