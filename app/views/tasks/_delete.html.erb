<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Delete Task?</h3>
    </div>
    <div class="modal-body">
      <ul class="errors"></ul>
      <strong>Are you sure you wish to delete this task?</strong>
      <div class="well">
        <%= @task.name %>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to "Yes, Delete this Task", project_task_path(@project.id, @task.id), method: :delete, remote: true, class: "btn btn-danger" %>
      <%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
    </div>
  </div>
</div>

