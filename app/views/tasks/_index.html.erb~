<% @tasks.each do |task| %>
  <tr>
    <td>
      <%= link_to project_task_top_path(task.project.id, task.id), method: :put, remote: true do %>
        <button type="button" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-chevron-up"></span>
        </button>
      <% end %>
      <%= link_to project_task_up_path(task.project.id, task.id), method: :put, remote: true do %>
        <button type="button" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-plus"></span>
        </button>
      <% end %>
      <%= link_to project_task_down_path(task.project.id, task.id), method: :put, remote: true do %>
        <button type="button" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-minus"></span>
        </button>
      <% end %>
      <%= link_to project_task_bottom_path(task.project.id, task.id), method: :put, remote: true do %>
        <button type="button" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-minus"></span>
        </button>
      <% end %>
    </td>
    <td><%= task.position %></td>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= l task.start_date %></td>
    <td><%= task.duration %></td>
    <td><%= l task.end_date %></td>
    <td><%= task.percent_complete %></td>
    <% if task.completed? == false %>
      <td>
        <%= link_to project_task_complete_path(task.project.id, task.id), method: :put, remote: true do %>
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-unchecked"></span>
          </button>
        <% end %>
      </td>
    <% elsif task.completed? == true %>
      <td>
        <%= link_to project_task_uncomplete_path(task.project.id, task.id), method: :put, remote: true do %>
            <button type="button" class="btn btn-default btn-lg">
              <span class="glyphicon glyphicon-check"></span>
            </button>
        <% end %>
      </td>
    <% end %>
    <td><%= link_to "Edit", edit_project_task_path(task.project.id, task.id), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to "Delete", project_task_delete_path(task.project.id, task.id), remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>
