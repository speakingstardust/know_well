<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title">Task Detail</h3>
      <button type="button" class="close" data-dismiss="modal">
        <span>&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <ul class="list-group">
        <li class="list-group-item list-group-item-info"><strong>Task Name</strong></li>
        <li class="list-group-item"><%= @task.name %></li>
        <li class="list-group-item list-group-item-info"><strong>Task Description</strong></li>
        <li class="list-group-item"><%= @task.description %></li>
        <li class="list-group-item list-group-item-info"><strong>Start Date</strong></li>
        <li class="list-group-item"><%= l @task.start_date %></li>
        <li class="list-group-item list-group-item-info"><strong>End Date</strong></li>
        <li class="list-group-item"><%= l @task.end_date %></li>
        <li class="list-group-item list-group-item-info"><strong>Duration</strong></li>
        <li class="list-group-item"><%= @task.duration %></li>
        <li class="list-group-item list-group-item-info"><strong>Dependencies</strong></li>
        <li class="list-group-item">
          <ul>
            <% @task.dependencies.each do |d| %>
              <li><%= d.name %></li>
            <% end %>
          </ul>
        </li>
      </ul>
        <li class="list-group-item list-group-item-info"><strong>Percent Complete</strong></li>
        <li class="list-group-item"><%= @task.percent_complete %></li>
        <li class="list-group-item list-group-item-info"><strong>Completed?</strong></li>
        <li class="list-group-item"><%= @task.completed? %></li>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-primary btn-block" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
