<% provide(:title, "MEICO Products Index") %>
<div class="page-header">
  <%= link_to "Create New MEICO Product", new_meico_product_path, class: "btn btn-primary pull-right" %>
  <h1 class="text-center">MEICO Products Index</h1>
</div>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @meico_products.each do |meico_product| %>
        <tr>
          <th scope="row"><%= meico_product.name %></th>
          <td><%= link_to 'Show', meico_product %></td>
          <td><%= link_to 'Edit', edit_meico_product_path(meico_product) %></td>
          <td><%= link_to 'Destroy', meico_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


