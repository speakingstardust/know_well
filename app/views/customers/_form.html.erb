<div class="container">
  <%= simple_form_for @customer, html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :street_address %>
    <%= f.input :city %>
    <%= f.input :state, collection: us_states %>
    <%= f.input :zip %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>