<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Delete Comment</h3>
    </div>
    <div class="modal-body">
      <ul class="errors"></ul>
      <strong>Are you sure you wish to delete this comment?</strong>
      <div class="well">
        <%= @comment.comment %>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to "Yes, Delete this Comment", project_comment_path(@project.id, @comment.id), method: :delete, remote: true, class: "btn btn-danger" %>
      <%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
    </div>
  </div>
</div>
