<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title">Comment Detail</h3>
      <button type="button" class="close" data-dismiss="modal">
        <span>&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <ul class="list-group">
        <li class="list-group-item list-group-item-info"><strong>Subject</strong></li>
        <li class="list-group-item"><%= @comment.subject %></li>
        <li class="list-group-item list-group-item-info"><strong>Comment</strong></li>
        <li class="list-group-item"><%= @comment.comment %></li>
        <li class="list-group-item list-group-item-info"><strong>Created By</strong></li>
        <li class="list-group-item"><%= @comment.creator_name %></li>
        <li class="list-group-item list-group-item-info"><strong>Date and Time Created</strong></li>
        <li class="list-group-item"><%= l @comment.created_at %></li>
      </ul>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-primary btn-block" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
