<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Delete Progress Note</h3>
    </div>
    <div class="modal-body">
      <ul class="errors"></ul>
      <strong>Are you sure you wish to delete this progress note?</strong>
      <div class="well">
        <%= @progress_note.note %>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to "Yes, Delete this Progress Note", project_progress_note_path(@project.id, @progress_note.id), method: :delete, remote: true, class: "btn btn-danger" %>
      <%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
    </div>
  </div>
</div>
