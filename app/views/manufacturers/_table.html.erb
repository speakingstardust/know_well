<table class="table" id="manufacturers-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Phone Number</th>
      <th colspan="3"></th>
    </tr> 
  </thead>
  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <th scope="row"><%= manufacturer.name %></th>
        <td><%= link_to "#{manufacturer.name}'s Website", manufacturer.website %></td>
        <td><%= manufacturer.phone %></td>
        <td class="show"><%= link_to 'Show', manufacturer %></td>
        <td class="edit"><%= link_to 'Edit', edit_manufacturer_path(manufacturer) %></td>
        <td class="destroy"><%= link_to 'Destroy', manufacturer, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
