<% provide(:title, "Jig Reporting") %>
<div class="page-header">
	<h1 class="text-center">Jig Reporting System</h1>
</div>

<h2 class="text-center">Shortcuts</h2>
<hr>
<%= link_to "Create New Jig Order", new_jig_order_path, class: "btn btn-primary btn-block" %>
<%= link_to "Create New Jig", new_jig_path, class: "btn btn-primary btn-block" %>
<hr>

<div class="col-md-12">
	<div class="col-xs-12 col-sm-6 col-md-4">
		<div class="thumbnail">
			<%= image_tag "Nest.jpg", alt: "Picture of Nest Jig", class: "img-responsive" %>
			<div class="caption">
				<h3>Jig List</h3>
				<p>List of all Jigs currently in the system.</p>
				<%= link_to "Jig List", jigs_path, class: "btn btn-primary btn-block"	%>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-4">
		<div class="thumbnail">
			<%= image_tag "jig_order.jpg", alt: "Picture of a collection of jigs.", class: "img-responsive" %>
			<div class="caption">
				<h3>Jig Order List</h3>
				<p>List of all Jig Orders currently in the system.</p>
				<%= link_to "Jig Order List", jig_orders_path, class: "btn btn-primary btn-block"	%>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-4">

	</div>
</div>