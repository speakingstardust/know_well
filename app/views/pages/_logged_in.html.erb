<div class="page-header">
	<h1 class="text-center">Navigation Page</h1>
</div>
<div class="col-md-12">
	<div class="col-xs-12 col-sm-6 col-md-4">
		<div class="thumbnail">
			<%= image_tag "clean_jigs.jpg", alt: "Picture of Nest Jig" %>
			<div class="caption center">
				<%= link_to "Jig Reporting System", jig_reporting_path, class: "btn btn-block btn-primary" %>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-4">
		<div class="thumbnail">
			<%= image_tag "customer_database.png", alt: "Customer Database Poster" %>
			<div class="caption center">
				<%= link_to "Customer List", customers_path, class: "btn btn-block btn-primary" %>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-4">
		<div class="thumbnail">
			<%= image_tag "work_orders_management.jpg", alt: "Work Orders Management Icon" %>
			<div class="caption center">
				<%= link_to "Work Orders Management", work_orders_management_path, class: "btn btn-block btn-primary" %>
			</div>
		</div>
	</div>
        <% if admin_signed_in? %>
            <div class="col-xs-12 col-sm-6 col-md-4">
                  <div class="thumbnail">
                          <%= image_tag "users.jpg", alt: "Users icon", class: 'img-responsive' %>
                          <div class="caption center">
                                  <%= link_to "Users List", users_path, class: "btn btn-block btn-primary" %>
                          </div>
                  </div>
          </div>
        <% end %>
</div>
