<%= paginate @orders %>
<table class="table">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Date Created</th>
      <th>Number of Items</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th scope="row"><%= order.id %></th>
        <td><%= l order.date_created %></td>
        <td><%= order.order_line_items.count %></td>
        <td class="show"><%= link_to 'Show', order %></td>
        <td class="destroy"><%= link_to 'Destroy', order, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
